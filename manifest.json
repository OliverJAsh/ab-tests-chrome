{
    "name": "A/B Tests",
    "version": "0.0.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_icon": "icon-19.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "declarativeContent",
        "activeTab",

        "*://www.theguardian.com/*",
        "*://m.code.dev-theguardian.com/*",
        "*://preview.gutools.co.uk/*",
        "*://m.thegulocal.com/*",
        "http://localhost:9000/*"
    ],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "manifest_version": 2,
    "web_accessible_resources": ["post-active-tests.js"],
    "content_scripts": [
        {
            "matches": [
                "*://www.theguardian.com/*",
                "*://m.code.dev-theguardian.com/*",
                "*://preview.gutools.co.uk/*",
                "*://m.thegulocal.com/*",
                "http://localhost:9000/*"
            ],
            "js": ["content-script.js"]
        }
    ]
}
