{
    "name": "A/B Tests",
    "version": "0.0.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_icon": "icon-19.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "declarativeContent", "tabs", "http://*/*", "https://*/*", "activeTab"
    ],
    "icons": {
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "manifest_version": 2,
    "web_accessible_resources": ["script.js"],
    "content_scripts": [
        {
            "matches": ["*://localhost/*", "*://localhost:*/*", "*://*.theguardian.com/*"],
            "js": ["content-script.js"]
        }
    ]
}
